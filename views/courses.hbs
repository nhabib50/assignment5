<div class="row"> 
    <div class="col-md-12">
        <br> 
        <h2>Courses
            <a href="/courses/add" class="btn btn-success float-right">Add New Course</a>
        </h2> 
        {{#unless courses}}
            <div class="col-md-12 text-center"> 
                <strong>{{message}}</strong> 
            </div>     
          <br>
        {{else}}  
          <hr /> 
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover table-info">
                <thead>
                    <tr>
                        <th>Course Code</th>
                        <th>Course Description</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each courses}}
                    <tr>
                        <td><a href="/course/{{courseId}}">{{courseCode}}</a></td>
                        <td><a href="/students?course={{courseId}}">{{courseDescription}}</a></td>
                        <td><a href="/course/delete/{{courseId}}"><button class="btn btn-danger">remove</button></a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
          </div>
        {{/unless}}  
    </div> 
</div>